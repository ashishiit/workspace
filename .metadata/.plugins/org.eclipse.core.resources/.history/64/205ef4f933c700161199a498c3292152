a = [5, 8, 1, 3, 7, 9, 2]
def Partition(a):
    pivot = a[0]
    left = 1
    right = len(a) - 1
    while True:
        while a[left] < pivot:
            left = left + 1
        while a[right] > pivot:
            right = right - 1
        if left >= right:
            break
        else:
            Swap(left,right)
    Swap(left,len(a)-1)
    return left
def Swap(left, right):
    temp = a[right]
    a[left] = a[right]
    a[right] = temp
print('pivot = ',Partition(a))
