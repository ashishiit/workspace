class Link:
    def __init__(self,data):
        self.data = data
        self.next = None
        self.down = None
class FlattenLinkedList:
    def __init__(self):
        self.first = None
    def InsertFirst(self,data):
        NewLink = Link(data)
        NewLink.next = self.first
        self.first = NewLink
    def Display(self):
        current = self.first
        while current is not None:
            print(current.data)
            current = current.next
"""this method is really
   important"""
    def Solution(self):
        print(l1.first.next.data)
        print(l2.first.data)
        l1.first.next.down = l2.first
        print(l1.first.next.down.data)
l1 = FlattenLinkedList()
l1.InsertFirst(4)
l1.InsertFirst(3)
l1.InsertFirst(2)
l1.InsertFirst(1)
l2 = FlattenLinkedList()
l2.InsertFirst(12)
l2.InsertFirst(10)
l2.InsertFirst(8)
l2.InsertFirst(7)
l1.Display()
print("*********")
l2.Display()
l3 = FlattenLinkedList()
print('attempt to flatten the lists')
l3.Solution()