a = [149, 192, 47, 152, 159, 195, 61, 66, 17, 167, 118, 64, 27, 80, 30, 105]
def Partition_Pivot1(a):
#     return a
    pivot = 99
    left = 0
    right = len(a) - 1
    while True:
        while a[left] < pivot:
            left = left + 1
        while a[right] > pivot:
            right = right - 1
        if left >= right:
            break
        else:
            Swap(a,left,right)
    return left
def Partition_Pivot2(b):
    pivot = b[len(b)-1]
    print('pivot = %d'%pivot)
    left = 0
    right = len(b)-2
    while True:
        while b[left] < pivot:
            left = left + 1
        while b[right] > pivot:
            right = right - 1
        if left >= right:
            break
        else:
            Swap(b,left,right)
    return left
def Swap(arr,left, right):
    temp = arr[left]
    arr[left] = arr[right]
    arr[right] = temp
print('before partition\n',a)    
print('partition defined pivot = %d'%Partition_Pivot1(a))
print('after parition\n',a)
print('***********choosing pivot from the list******************')
b = [42, 89, 63, 12, 94, 27, 78, 3, 50, 36]
print('pivot = %d',%Partition_Pivot2(b))
print(b)