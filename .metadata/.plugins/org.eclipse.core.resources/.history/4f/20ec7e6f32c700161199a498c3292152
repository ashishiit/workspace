a = [149, 192, 47, 152, 159, 195, 61, 66, 17, 167, 118, 64, 27, 80, 30, 105]
def Sort(arr,left,right):
    if left < right:
        part = Partition_Pivot2(arr, left, right)
        Sort(arr, left, part-1)
        Sort(arr, part+1, right)
def Partition_Pivot1(a):
#     return a
    pivot = 99
    left = 0
    right = len(a) - 1
    while True:
        while a[left] < pivot:
            left = left + 1
        while a[right] > pivot:
            right = right - 1
        if left >= right:
            break
        else:
            Swap(a,left,right)
    return left
def Partition_Pivot2(b, left, rightptr):
    pivot = b[rightptr]
#     print('pivot = %d'%pivot)
#     left = 0
    right = rightptr-1
    while True:
        while b[left] < pivot:
            left = left + 1
        while b[right] > pivot:
            right = right - 1
#         print('left = %d'%left)
#         print('right =%d'%right)
        if left >= right:
            break
        else:
            Swap(b,left,right)
    Swap(b,left,len(b)-1)
    print('pivot = %d'%left)
    return left
def Swap(arr,left, right):
    temp = arr[left]
    arr[left] = arr[right]
    arr[right] = temp
print('before partition\n',a)    
# print('partition defined pivot = %d'%Partition_Pivot1(a))

Sort(a, 0, len(a)-1)
print('after parition\n',a)
# print('completely sorted',a)
