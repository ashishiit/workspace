a = [5, 8, 1, 3, 7, 9, 2]
def Sort(a, left, right):
    if left < right:
        part = Partition(a, left, right)
#         print('test = %d'%part)
#         print(a)
        Sort(a, left, part-1)
        print(a[left:part-1])
        Sort(a, part+1, right)
        
def Partition(a, leftPtr, rightPtr):
    pivot = a[0]
    left = leftPtr + 1
    right = rightPtr
    while True:
#         print(a[left])
        while a[left] < pivot:
            left = left + 1
        while a[right] > pivot:
            right = right - 1
        if left >= right:
            break
        else:
            Swap(a,left,right)
#         print(a)
    
#         print('pivot = %d'%left)
    Swap(a,a.index(pivot),right)
    return left
def Swap(a,left, right):
    temp = a[right]
    a[right] = a[left]
    a[left] = temp
Partition(a, 0, len(a)-1)
print('after partition')
print(a)
print('****************')
Sort(a, 0, len(a)-1)
print('after sorting')
print(a)