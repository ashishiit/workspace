class Link:
    def __init__(self,data):
        self.next = None
        self.data = data
class Merge2SortedLists:
    def __init__(self):
        self.first = None
        self.count = 0
#         self.first2 = None
    def InsertFirst(self,data):
        self.count = self.count + 1
        NewLink = Link(data)
        NewLink.next = self.first
        self.first = NewLink
    def Display(self):
        current1 = self.first
        while current1 is not None:
            print(current1.data)
            current1 = current1.next
    def Solution(self):
