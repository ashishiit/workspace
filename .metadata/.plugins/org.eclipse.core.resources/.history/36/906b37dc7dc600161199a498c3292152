def Sort(self,a):
    if len(a)>1:
        mid = len(a) //2
        left = Sort(a[:mid])
        right = Sort(a[mid:])
        return Merge(left,right)
def Merge(a,b):
    c = []
    i = 0
    j = 0
    k = 0
    while i < len(a) and j < len(b):
        if a[i] < b[j]:
            c[k] = a[i]
#             k = k + 1
            i = i + 1
        else:
            c[k] = b[j]
            j = j + 1
#             k = k + 1
        k = k + 1
    while i < len(a):
        c[k] = a[i]
        k = k + 1
        i = i + 1
    while j < len(b):
        c[k] = b[j]
        k = k + 1
        j = j + 1
    return c
print(Sort([20, 1, 30]))
